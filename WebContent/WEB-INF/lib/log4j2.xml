<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
 
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %p %m%n</Property>
		<Property name="APP_LOG_ROOT">/opt/glassfish5/glassfish/domains/domain1/logs</Property>
    </Properties>
 
    <Appenders>
 
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
         
        <RollingFile name="remedyRequestsLog" fileName="${sys:APP_LOG_ROOT}/remedy_requests.log"
            filePattern="${sys:APP_LOG_ROOT}/spectra-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="19500KB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <RollingFile name="nluRequestsLog" fileName="${sys:APP_LOG_ROOT}/nlu_requests.log"
            filePattern="${sys:APP_LOG_ROOT}/spectra-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="19500KB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>     
         
    </Appenders>
 
    <Loggers>
     
        <Logger name="gr" additivity="false" level="all">
            <AppenderRef ref="remedyRequestsLog" />
        </Logger>

        <Logger name="gr.wind.spectra.business.CLIOutage" additivity="false" level="all">
            <AppenderRef ref="nluRequestsLog" />
        </Logger>
                 
        <Root level="all">
            <AppenderRef ref="Console"/>
        </Root>
 
    </Loggers>
 
</Configuration>